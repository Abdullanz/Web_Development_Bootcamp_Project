<%- include("../partials/header") %>
    <div class="container">
        <h1 style="text-align: center;">قم بإنشاء نموذجا جديدا</h1>

        <div style="width: 30%; margin: 0 auto; margin-bottom: 2rem;">
            <form action="/campgrounds" method="POST">
                <!-- ALWAYS REMEMBER THE NAME PROPERTY -->
                <div class="form-group">
                    <input class="form-control" type="text" name="name" placeholder="العنوان">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="price" placeholder="السعر" min="0.01" step="0.01">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="image" placeholder="عنوان الصورة">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="description" placeholder="الوصف">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-secondary btn-block">قدم</button>
                </div>
            </form>
            <a href="/campgrounds">ارجع للوراء</a>
        </div>
    </div>
    <%- include("../partials/footer") %>